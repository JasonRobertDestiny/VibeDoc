# VibeDoc 环境配置文件
# 请复制此文件为 .env 并填入你的实际配置值

# =========================
# 必填配置
# =========================

# Silicon Flow API密钥 (必填)
# 在 https://siliconflow.cn 注册并获取
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# =========================
# 可选配置 - MCP服务
# =========================

# DeepWiki MCP服务URL (可选)
# 用于解析 deepwiki.org 链接
DEEPWIKI_SSE_URL=http://localhost:8080

# 通用网页抓取MCP服务URL (可选)
# 用于解析普通网页链接
FETCH_SSE_URL=http://localhost:8081

# Doubao文字转图像MCP服务URL (可选)
# 用于生成概念LOGO
DOUBAO_SSE_URL=http://localhost:8082

# Doubao API密钥 (可选)
# 如果使用Doubao服务需要填写
DOUBAO_API_KEY=your_doubao_api_key_here

# =========================
# 应用配置
# =========================

# 应用运行端口
PORT=3000

# 运行环境
NODE_ENV=production

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API请求超时时间(秒)
API_TIMEOUT=120

# MCP服务超时时间(秒)
MCP_TIMEOUT=30

# =========================
# 调试配置
# =========================

# 是否启用调试模式
DEBUG=false

# 是否启用详细日志
VERBOSE_LOGGING=false

# 是否启用性能监控
PERFORMANCE_MONITORING=false

# =========================
# 配置说明
# =========================

# 1. SILICONFLOW_API_KEY 是必填项，应用无法正常工作
# 2. MCP服务URLs是可选的，如果不配置对应功能将不可用
# 3. 如果只配置了一个MCP服务，系统会自动降级到可用的服务
# 4. 建议在生产环境中设置适当的超时时间
# 5. 调试模式会产生大量日志，仅在开发时使用